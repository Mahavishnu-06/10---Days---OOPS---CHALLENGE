package OOPS.TASKS;
class Vehicle{
  protected String Brand;
  protected String Model;
  private float speed;
  Vehicle(String brand,String model){
   this.Brand=brand;
   this.Model=model;
  }
  public float getspeed(){
    return speed;
  }
  public void setSpeed(float speed){
    this.speed=speed;
  } 
  public void displayInfo(){
     System.out.println("The vehicle brand and model are "+Brand+" "+Model+" with speed " + getspeed() + " km/h");
  }
  static void showComapnyname(){
    System.out.println("Autotech industries");
  }
}
interface Engine{
    void startEngine();
}
class Car extends Vehicle implements Engine{
    Car(String brand,String model){
        super(brand, model);
    }
    public void displayInfo(){
        System.out.println("The car brand and models are "+Brand+" "+Model+" with speed " + getspeed() + " km/h");
    }
    public void startEngine(){
        System.out.println("The car has been started");
    }
}
class Bike extends Vehicle implements Engine{
    Bike(String brand,String model){
        super(brand,model);
    }
    public void displayInfo(){
       System.out.println("The bike brand and models are "+Brand+" "+Model+" with speed " + getspeed() + " km/h");
    }
    public void startEngine(){
        System.out.println("The bike has been started");
    }
}
public class Task10 {
    public static void main(String[] args) {
     Vehicle.showComapnyname();
     Vehicle list[]={new Car("Maruti Suziki", "Swift"),new Bike("Yamaha","Yamaha MT-15 V2")};
     list[0].setSpeed(140.3f);
     list[1].setSpeed(120.4f);
      for(Vehicle v:list){
         v.displayInfo();
      }
      Engine C=new Car("Maruti Suziki","Swift");
      Engine B=new Bike("Yamaha","Yamaha MT-15 V2");
      C.startEngine();
      B.startEngine();
    }
}
