package OOPS.TASKS;
class BankAccount{
    double calculateInterest(){
        return 0;
    }
}
class SavingsAccount extends BankAccount{
    int interest;
    SavingsAccount(int inte){
      this.interest=inte;
    }
    double calculateInterest(){
        return interest;
    }
}
class CurrentAccount extends BankAccount{
    int interest;
    CurrentAccount(int intr){
        this.interest=intr;
    }
    double calculateInterest(){
        return interest;
    }
}
public class Task5{
    public static void main(String[] args) {
        BankAccount b1=new SavingsAccount(5);
        System.out.println(b1.calculateInterest());
        BankAccount b2=new CurrentAccount(2);
        System.out.println(b2.calculateInterest());
        BankAccount[] bank={new SavingsAccount(6),new CurrentAccount(8)};
        for(BankAccount b:bank){
            System.out.println(b.calculateInterest());
        } 
    }
}












































