package OOPS.TASKS;

abstract class BankAccount {
    String name;
    int accountNumber;

    BankAccount(String name, int accNo) {
        this.name = name;
        this.accountNumber = accNo;
    }

    abstract double calculateInterest();

    void showAccountHolder() {
        System.out.println("Account Holder: " + name);
    }
}

class SBIBank extends BankAccount {
    SBIBank(String n, int no) {
        super(n, no);
    }

    @Override
    double calculateInterest() {
        return 0.05;
    }
}

class HDFCBank extends BankAccount {
    HDFCBank(String n, int no) {
        super(n, no);
    }

    @Override
    double calculateInterest() {
        return 0.06;
    }
}

public class Task8 {
    public static void main(String[] args) {
        BankAccount b1 = new SBIBank("Vishnu", 3123);
        BankAccount b2 = new HDFCBank("Vicky", 4567);

        b1.showAccountHolder();
        System.out.println("Interest: " + b1.calculateInterest());

        b2.showAccountHolder();
        System.out.println("Interest: " + b2.calculateInterest());
    }
}


